@article{zhou2024ai,
  title={AI-focused HPC data centers can provide more power grid flexibility and at lower cost},
  author={Zhou, Yihong and Paredes, Angel and Essayeh, Chaimaa and Morstyn, Thomas},
  journal={arXiv preprint},
